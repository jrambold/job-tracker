<%= form_for [@company, @contact], :html => {:class => "form-horizontal center"} do |f| %>
  <div class="form-group">
    <%= f.label :name, "Name", class: "col-md-4 control-label" %>
    <div class="col-md-8">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :role, "Role", class: "col-md-4 control-label" %>
    <div class="col-md-8">
      <%= f.text_field :role, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :email, "Email", class: "col-md-4 control-label" %>
    <div class="col-md-8">
      <%= f.text_field :email, class: "form-control" %>
    </div>
  </div>

  <%= f.submit class: "btn btn-default btn-primary" %>
<% end %>
