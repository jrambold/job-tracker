<%= form_for [@company, @job] do |f| %>

  <%= f.label :category_id %>
  <%= f.collection_select :category_id, @categories, :id, :title %>

  <% unless @company %>
    <%= f.label :company_id %>
    <%= f.collection_select :company_id, @companies, :id, :name %>
  <% end %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :level_of_interest %>
  <%= f.number_field :level_of_interest %>

  <%= f.label :city %>
  <%= f.text_field :city %>

  <%= f.submit %>
<% end %>
